<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		id="tcpServer"
		class="org.aaron.sms.broker.SMSBrokerTCPServer"
		init-method="init"
		destroy-method="destroy">
		<property
			name="topicContainer"
			ref="topicContainer" />
		<property
			name="listenAddress"
			value="0.0.0.0" />
		<property
			name="listenPort"
			value="10001" />
	</bean>

	<bean
		id="topicContainer"
		class="org.aaron.sms.broker.SMSTopicContainer"
		init-method="init"
		destroy-method="destroy">
	</bean>

</beans>